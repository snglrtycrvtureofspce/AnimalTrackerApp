<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:SpaceXhistory.Views"
            x:Class="SpaceXhistory.Views.BottomTabPage"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="Black">

    <NavigationPage Title="Home"
                    IconImageSource="base">
        <x:Arguments>
            <local:HomePage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="next launchs"
                    IconImageSource="ship">
        <x:Arguments>
            <local:UpcomingLaunchesPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="latest launchs"
                    IconImageSource="cap">
        <x:Arguments>
            <local:PastLaunchesPage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>
